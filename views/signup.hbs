<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <style>
        .container {
            height: 100vh;
        }
    </style>
</head>

<body>
    <div class="container d-flex justify-content-center align-items-center">
        <div class="formdata border rounded p-3 w-25">
            <h2 class="text-center">Registration</h2>

            <div id="alert" class="alert alert-warning alert-dismissible fade show d-none" role="alert">
                <span id="alert-message"></span>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>

            <form action="/user/create" id="formdata" method="post" enctype="multipart/form-data">
                <input type="text" name="username" id="username" class="form-control" placeholder="Enter Username"><br>
                <input type="file" name="img" id="img" class="form-control" multiple><br>
                <input type="text" name="email" id="email" class="form-control" placeholder="Enter Email"><br>
                <input type="password" name="Password" id="Password" class="form-control"
                    placeholder="Enter Password"><br>
                <input type="submit" value="Create" class="btn btn-success float-end">
            </form>
        </div>
    </div>

    <script src="/jquery/jquery.min.js"></script>
    <script src="/js/bootstrap.bundle.min.js"></script>
    <script>
        let msg = "{{msg}}";
        if (msg.length > 0) {
            document.getElementById("alert-message").innerText = msg;
            document.querySelector(".alert").classList.remove("d-none");
            $(document).ready(function(){
                $(".alert").fadeIn(2000).fadeOut(10000);
            })
        }
    </script>
</body>

</html>